	param set COM_OBL_ACT 2
	param set COM_OBL_RC_ACT 5

	param set PWM_MAX 1850
	param set PWM_MIN 1000

	param set MPC_THR_CURVE 1
	param set MPC_THR_HOVER 0.35
	param set MPC_THR_MAX 1.0
	param set MPC_THR_MIN 0.08
	param set MPC_MANTHR_MIN 0.08

	param set PWM_MAIN_SCALE1 1.01315789
	param set PWM_MAIN_SCALE2 1.00442478
	param set PWM_MAIN_SCALE3 1.00074019
	param set PWM_MAIN_SCALE4 1.00000000

	param set MOT_CURR_CUTOFF 0.5
	param set ACS_V_PER_A 0.060
	param set MCP_LSB 0.00025
	param set MCP_BIAS -8.2125

	# Adaptive
	param set MPC_X_ADAP_EN 0

	param set MPC_MRAC_WN 0.8
	param set MPC_MRAC_SGN_K 1
	param set MPC_MRAC_LMBDWN 50
	param set MPC_MRAC_LMBDZT 0.9
	param set MPC_MRAC_UP_NORM 125.5680
